<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jelliroo.mallmapbeta">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="Map" />
        <activity
            android:name=".activities.BeaconsActivity"
            android:label="Beacons" />
        <activity
            android:name=".activities.ClassesActivity"
            android:label="Classes" />
        <activity
            android:name=".activities.TrainingActivity"
            android:label="Train" />
        <activity
            android:name=".activities.LaunchActivity"
            android:label="Floors">
        </activity>
        <activity
            android:name=".activities.FloorActivity"
            android:label="Floors" />
        <activity android:name=".activities.ManageTrainingActivity" />
        <activity android:name=".activities.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="Mall Map">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
    </application>

</manifest>